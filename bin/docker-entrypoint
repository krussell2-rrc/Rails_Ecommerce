#!/bin/bash -e

# Enable jemalloc if available
if [ -z "${LD_PRELOAD+x}" ]; then
  LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
  export LD_PRELOAD
fi

# Always make sure DB is ready (works for fresh Postgres on Render free)
./bin/rails db:prepare || ./bin/rails db:schema:load

# Hand off to the command (thrust rails server by default)
exec "$@"
